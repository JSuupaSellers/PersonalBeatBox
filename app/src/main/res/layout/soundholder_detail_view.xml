<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/textview_sound_name"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="85dp"
        android:layout_marginEnd="85dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageButton_play_sound"
        android:layout_toStartOf="@+id/imageButton_play_sound" />

    <ImageButton
        android:background="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_play_sound"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>