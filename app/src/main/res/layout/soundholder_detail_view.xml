<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignBottom="@+id/imageButton_play_sound"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/black"
        android:id="@+id/view" />

    <ImageButton
        android:background="@drawable/ic_play_circle_filled_black_24dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_play_sound"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textview_sound_name"
        android:textSize="30sp"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageButton_play_sound"
        android:layout_toEndOf="@+id/imageButton_play_sound" />

    <CheckBox
        android:id="@+id/checkbox_delete_or_not"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>